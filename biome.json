{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "includes": ["**/*.{js,ts,jsx,tsx,json}"],
    "experimentalScannerIgnores": [
      "build/**",
      "d/**",
      "config/**",
      "src/locales/**"
    ]
  },
  "formatter": {
    "lineWidth": 80,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "globals": ["global"],
    "formatter": {
      "trailingCommas": "es5",
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always"
    }
  },
  "linter": {
    "rules": {
      "recommended": true
    }
  }
}
